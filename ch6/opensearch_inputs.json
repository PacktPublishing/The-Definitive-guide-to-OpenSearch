GET movies/_search
{
  "explain": "true",
  "_source": "title",
  "query": {
    "bool": {
      "must": [
        { "match": { "title": "star wars" }}
      ],
      "filter": [
        { "range": { "year": { "gte": 1977, "lte": 1983 }}}
      ]
  }}}

GET movies/_search
{
  "query": {
    "bool": {
      "must": [
        {"term": {"genres.keyword": {"value": "Sci-Fi"}}},
        {"match": {"title": "star wars"}},
        {"bool":
          {"should": [
            {"match": {"plot": "luke"}},
            {"match": {"plot": "annakin" }},
            {"match": {"plot": "leia"}},
            {"match": {"directors": "george"}}
          ],
          "minimum_should_match": 1, 
          "boost": 2
        }}
]}}}


GET movies/_search
{
  "query": {
    "boosting": {
      "positive": {"match": {"title": "star wars"}},
      "negative": {"prefix": {"title": "battle"}},
      "negative_boost": 0.2
}}}


GET movies/_search
{
  "query": {
    "dis_max": {
      "tie_breaker": 0.7,
      "boost": 1.2, 
      "queries": [
        {"terms": {"title": [ "star", "wars" ]}},
        {"match": { "plot": "Luke Skywalker" }}
]}}}


GET movies/_search
{
  "explain": true,
  "_source": "title", 
  "query": {
    "multi_match": {
      "query": "star wars",
      "fields": ["title", "plot"],
      "type": "best_fields",
      "tie_breaker": 0.3
}}}


GET movies/_search
{
  "explain": true,
  "_source": "title", 
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "filter": [
            {"term":
              {"genres.keyword": {"value": "Sci-Fi"}}}
          ], 
          "should": [
            {"match": {"plot": "star wars"}},
            {"match_phrase": {"actors": "mark hamill"}},
            {"match_phrase": {"actors": "carrie fisher"}},
            {"match_phrase": {"directors": "george lucas"}}
          ]
        }
      },
      "functions": [
        {"exp": {
          "year": {
            "origin": "2025",
            "scale": "10"
          }
        }},
        {"script_score": {
          "script": "10 * doc['rating'].value"
        }}
      ], 
      "score_mode": "sum",
      "boost_mode": "replace"
}}}


GET movies/_search
