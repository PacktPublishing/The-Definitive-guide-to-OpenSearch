GET movies/_search
{
  "explain": true,
  "_source": "title", 
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "filter": [
            {"term":
              {"genres.keyword": {"value": "Sci-Fi"}}}
          ], 
          "should": [
            {"match": {"plot": "star wars"}},
            {"match_phrase": {"actors": "mark hamill"}},
            {"match_phrase": {"actors": "carrie fisher"}},
            {"match_phrase": {"directors": "george lucas"}}
          ]
        }
      },
      "functions": [
        {"exp": {
          "year": {
            "origin": "2025",
            "scale": "10"
          }
        }},
        {"script_score": {
          "script": "10 * doc['rating'].value"
        }}
      ], 
      "score_mode": "sum",
      "boost_mode": "replace"
}}}


